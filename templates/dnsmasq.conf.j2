# Interface à écouter
interface={{ dnsmasq_interface }}
bind-interfaces

# Domaine local
domain={{ dnsmasq_domain }}

# DHCP : plage et durée de bail
dhcp-range={{ dhcp_range_start }},{{ dhcp_range_end }},{{ dhcp_lease_time }}
dhcp-option=3,{{ dhcp_option_router }}
dhcp-option=6,{{ dhcp_option_dns }}

# DNS amont
{% for server in upstream_dns %}
server={{ server }}
{% endfor %}